@model ainat_closet.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<body background="https://images.pexels.com/photos/1103970/pexels-photo-1103970.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940">
    <div class="row">
        <div class="col-md-4 offset-4">
            <div class="card bg-light mb-3" style="width: 450px; height: 450px">
                <h5 class="card-header text-center"><i class="fa-solid fa-envelope text-navy"></i> Iniciar Sesión</h5>
                <div class="card-body">

                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center"></div>
                        <div class="form-group text-center">
                            <label asp-for="Username" class="control-label text-center"></label>
                            <input asp-for="Username" class="form-control text-center" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Password" class="control-label text-center"></label>
                            <input asp-for="Password" type="password" class="form-control text-center" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <div class="form-check">
                                <label asp-for="RememberMe" class="form-check-label"></label>
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            </div>
                            <span asp-validation-for="RememberMe" class="text-warning"></span>
                        </div>
                        <div class="form-group mt-2 text-center">
                            <input type="submit" value="Iniciar Sesión" class="btn btn-outline-primary" />
                            <a asp-action="Register" class="btn btn-outline-secondary">Nuevo Usuario</a>
                            <a asp-action="RecoverPassword" class="btn btn-link">¿Has olvidado tu contraseña?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
